<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryzen.ryan.carbonzero.QuestionFour">

    <ImageView
        android:id="@+id/formBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/question4"
                android:layout_marginTop="80dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="306dp"
            android:layout_height="71dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="40dp"
            android:font="@font/aller"
            android:textColor="#fff"
            android:textSize="17dp"
            android:text="DO YOU RECYCLE?" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:text="Select one of the options below:"
            android:textColor="#fff"
            android:textSize="10dp" />


        <Button
            android:id="@+id/choiceOne"
            android:layout_width="320dp"
            android:textColor="#B3ffffff"

            android:layout_marginLeft="19dp"
            android:layout_height="45dp"
            android:layout_marginTop="19dp"
            android:font="@font/aller"
            android:textSize="14dp"
            android:text="YES"
            android:background="#26ffffff"
            />

        <Button
            android:id="@+id/choiceTwo"
            android:layout_width="320dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="19dp"
            android:layout_height="45dp"
            android:textSize="14dp"
            android:font="@font/aller"
            android:textColor="#B3ffffff"
            android:text="NO"
            android:background="#26ffffff"/>



    </LinearLayout>

</RelativeLayout>
